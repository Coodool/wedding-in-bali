/* pages/index/index.wxss */
page {
  background-color: #e8e8e8;
}

.index-page {
  padding: 30rpx 40rpx;
}

.img {
  width: 100%;
  height: 200px;
  border-radius: 10rpx;
  margin-bottom: 12.5rpx;
  position: relative;
}

.play {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 60px;
  height: 60px;
}

.panel-container {
  display: flex;
  flex-wrap: wrap;
  margin: 0rpx -12.5rpx;
}

.panel {
  background-color: #fff;
  border-radius: 10rpx;
  margin: 12.5rpx;
  flex-grow: 1;
  font-size: 12px;
  display: flex;
  align-items: center;
}

/* 每一行留有650rpx的空间 */

.main-panel {
  height: 80px;
  flex-basis: 10px;
  font-size: 16px;
}

.main-panel .iconfont {
  font-size: 80rpx;
  color: #595959;
  margin-right: 12px;
  margin-left: 20%;
}

.travel-panel {
  height: 150rpx;
  flex-basis: 10px;
  justify-content: center;
  flex-direction: column;
}

.travel-panel .iconfont {
  font-size: 60rpx;
  color: #595959;
  margin-bottom: 5rpx;
}
