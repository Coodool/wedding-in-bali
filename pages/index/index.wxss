/* pages/index/index.wxss */
/* 牡丹粉红 */
page {
  background-color: #eea2a4;
  font-size: 12px;
}

.live-entry {
  width: 100%;
  height: 200px;
  border-radius: 8px;
  position: relative;
  box-shadow: 0px 0px 10px #8c8c8c;
}

.play {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 60px;
  height: 60px;
}

.card {
  flex-grow: 1;
  flex-basis: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon {
  width: 40px;
  height: 40px;
}

.main {
  display: flex;
  margin: 12px 0px;
  font-size: 16px;
}

.main-card {
  height: 90px;
}

.main .icon {
  margin-right: 8px;
  height: 48px;
  width: 48px;
}

.main-card:not(:last-child) {
  margin-right: 12px;
}

.travel-card {
  display: flex;
  margin: 12px 0px;
  justify-content: space-around;
  height: 90px;
}

.travel-list {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tool {
  display: flex;
  margin: 12px 0px;
}

.tool-card {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100px;
}

.tool-card:not(:last-child) {
  margin-right: 12px;
}
