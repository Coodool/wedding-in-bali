/* pages/index/index.wxss */
page {
  background-color: #e8e8e8;
}

.index-page {
  padding: 30rpx 0px;
}

.live-container {
  margin-bottom: 12.5rpx;
}

live-player {
  width: 100%;
  height: 441rpx;
}

.panel-image {
  width: 80rpx;
  height: 80rpx;
}

.panel-container {
  display: flex;
  flex-wrap: wrap;
  margin: 0rpx 37.5rpx;
}

.panel {
  background-color: #fff;
  border-radius: 20rpx;
  margin: 12.5rpx;
  flex-grow: 1;
  width: 200rpx;
  height: 200rpx;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
