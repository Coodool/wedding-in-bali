/* pages/index/index.wxss */
page {
  background-color: #e8e8e8;
}

.index-page {
  padding: 30rpx 40rpx;
}

.img {
  width: 100%;
  height: 200px;
  border-radius: 10rpx;
  margin-bottom: 12.5rpx;
  position: relative;
  box-shadow: 0px 0px 10px #8c8c8c;
}

.play {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 60px;
  height: 60px;
}

.panel-container {
  display: flex;
  flex-wrap: wrap;
  margin: 0rpx -12.5rpx;
}

.panel {
  /* background-color: #fff1f0; */
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0px 0px 10px #8c8c8c;
  margin: 12.5rpx;
  flex-grow: 1;
  font-size: 12px;
  display: flex;
  align-items: center;
  height: 150rpx;
  flex-basis: 10px;
  justify-content: center;
  flex-direction: column;
}

/* 每一行留有650rpx的空间 */

