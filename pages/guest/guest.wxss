/* pages/guest/guest.wxss */

/* gold-5 */
page {
  background-color: #ffc53d;
}

.container {
  padding: 12px 16px;
}

.section {
  background-color: #fff;
  box-shadow: 0px 0px 10px #8c8c8c;
  border-radius: 8px;
  margin-bottom: 12px;
  padding: 12px 30rpx;
  display: flex;
}

.section:not(:last-child) {
  border-bottom: 0.1px solid #e8e8e8;
}

image {
  width: 60px;
  height: 60px;
  border-radius: 10%;
  margin-right: 12px;
  margin-top: 3px;
}

.introduce {
  flex-grow: 1;
}

.name {
  margin-bottom: 6px;
  font-size: 16px;
}

.description {
  text-align: justify;
  color: #8c8c8c;
  font-size: 14px;
}
