/* live/live.wxss */
page {
  background-color: #e8e8e8;
}

.live-player {
  width: 100%;
  height: 220px;
  position: relative;
}

/* 播放器下方工具栏 */
.tool {
  position: absolute;
  width: 100%;
  height: 36px;
  bottom: 0px;
  background-color: rgba(0,0,0,0.5);
  box-sizing: border-box;

  color: #e6e6e6;
  display: flex;
  justify-content: space-between;
  padding: 0px 8px;
  align-items: center;
}

.tool.hide {
  bottom: -36px;
}

.left-section, .right-section {
  display: flex;
  align-items: center;
  line-height: 24px;
}

.switch-line {
  margin: 0px 8px;
}

.tool cover-image {
  margin: 0px 6px;
  width: 28px;
  height: 28px;
}

/* 视频数据流日志 */

.log-info {
  margin: 8px;
  /* color: #bfbfbf; */
  color: #8c8c8c;
  font-size: 12px;
}

.info {
  line-height: 1.5;
}

/* 聊天室 */

