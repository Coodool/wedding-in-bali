/* 输入框 */

.bottom {
  position: fixed;
  width: 100%;
  bottom: 0px;
  /* background-color: #f7f7f7; */
  background-color: #fff;
  height: 48px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #d9d9d9;
}

.input-wrapper {
  /* background-color: white; */
  display: flex;
  align-items: center;
  width: 100%;
  margin: 8px 16px;
  padding: 6px 4px;
  border-radius: 4px;
  font-size: 16px;
}

.input {
  padding: 0px 8px;
  flex-grow: 1;
}

.send {
