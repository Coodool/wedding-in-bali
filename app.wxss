/* @import 'weui.wxss'; */
@import 'libs/style/iconfont.wxss';

/**app.wxss**/
page {
  /* background-color: #e8e8e8; */
  font-size: 14px;
  height: 100%;
  text-align: justify;
}

.card {
  background-color: #fff;
  border-radius: 8px;
  padding: 12px 12px;
  box-sizing: border-box;
  box-shadow: 0px 0px 10px #8c8c8c;
}

.title + .paragraph {
  margin-top: 4px;
}

.page-title {
  line-height: 48px;
  background-color: #262626;
  font-size: 18px;
  color: #e8e8e8;
  text-align: center;
  position: fixed;
  width: 100%;
  top: 0px;
}

.page-body {
  padding-top: 48px;
  margin: 0px 30rpx;
}

.container {
  padding: 12px 16px;
  height: 100%;
  box-sizing: border-box;
}

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

checkbox .wx-checkbox-input{
  border-radius: 50%;/* 圆角 */
  width: 36rpx; /* 背景的宽 */
  height: 36rpx; /* 背景的高 */
  margin-top: -6rpx;
}

.ul {
  background-color: #fafafa;
  box-shadow: 0px 0px 5px #bfbfbf;
  color: #595959;
  border-radius: 5px;
  padding: 12px 12px 20px;
  margin: 20px 0px;
}

.ul-list::before {
  content: "● ";
  /* content: "• "; */
}

.ul-list {
  text-indent: -1.2em;
  padding-left: 1.2em;
}

.highlight {
  text-align: center;
  color: #000;
  font-size: 16px;
  margin-bottom: 10px;
}

.paragraph {
  margin: 16px 0px;
}

.right {
  float: right;
}

.center {
  text-align: center;
}
